<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="block-flat">
      <div class="page-header">
        <h2 class="text-center text-success"><i class="fa fa-user"></i> My Profile </h2>
      </div>
      <%= form_for @profile, :html => { :class => "form-horizontal save_seeker" }, :remote => true, url: @url  do |f| %>

        <div class="form-group">
          <%= f.label :first_name, :class => "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :first_name, autofocus: true, :class => "form-control", :placeholder => "enter your first name" %>
            <span class="help-block text-right text-muted"></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name, :class => "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :last_name, autofocus: true, :class => "form-control", :placeholder => "enter your last name" %>
            <span class="help-block text-right text-muted"></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Date of birth", :class => "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.date_field :dob, autofocus: true, :class => "form-control", :placeholder => " date of birth " %>
            <span class="help-block text-right text-danger"></span>
          </div>
        </div>
       
        <div class="form-group">
          <%= f.label :objective, :class => "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :objective, autofocus: true, :class => "form-control", :placeholder => "please enter your career objective" %>
            <span class="help-block text-right text-muted"></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :career_overview, :class => "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_area :career_overview, autofocus: true, :class => "form-control", :placeholder => "please enter your career overview" %>
            <span class="help-block text-right text-muted"></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :expected_salary, :class => "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.number_field :expected_salary, autofocus: true, :class => "form-control", :min => 10000, :max => 500000, :step => 500, :placeholder => " e.g : BDT : 80000" %>
            <span class="help-block text-right text-muted"></span>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-4 pull-right">
            <%= f.button :class => "btn btn-flat btn-primary pull-right"  do %>
                <i class="fa fa-save"></i> Save Profile
            <% end %>
          </div>
        </div>
          
      <% end %>
    </div>
  </div>
</div>
