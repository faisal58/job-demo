<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
  <div class="block-flat">
    <div class="header">
      <h3>All Jobs By Categories</h3>
    </div>
    <div class="content">
      <div class="list-group">
        <% @jobs.each do |data| %>
            <a class="list-group-item" href="<%= job_front_url(data[:category_id]) %>">
              <%= data[:category_name]  %>
              <span class="badge badge-<%= data[:jobs].count > 0 ? 'success' : 'danger' %>">
                <%= data[:jobs].count %>
              </span>
            </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
