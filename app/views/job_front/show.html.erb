<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
  <div class="block-flat">
    <div class="header">
      <h3>All  <span class="text-primary"><%= @category_name %></span> jobs </h3>
    </div>
    <div class="content">
      <% if @jobs.count > 0 %>
      <div class="list-group">
        <% @jobs.each do |job| %>
            <a class="list-group-item" href="<%= view_job_by_id_url(job.id) %>">
              <%= job.title %>
              <span class="badge badge-success">0</span>
            </a>
        <% end %>
      </div>
      <% else %>
        <p class="alert alert-danger">Opps!! No job found with this category</p>
      <% end %>
    </div>
  </div>
</div>
