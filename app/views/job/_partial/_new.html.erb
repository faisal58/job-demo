<%= form_for @job, :html => { :class => "form-horizontal" }, :remote => true  ,url: jobs_path do |f| %>

    <div id="error-messages">
        <% @job.errors.each do |key, val| %>
            <p class="r-alert"> <strong><%= key.to_s %></strong> : <%= val.to_s %> </p>
        <% end %>
    </div>

    <div class="form-group">
      <%= f.label :title, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :title, autofocus: true, :class => "form-control", :placeholder => " e.g : ( Senior Web Developer ) " %>
        <span class="help-block text-right text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :job_category_id, 'Job Category', :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.select :job_category_id, options_from_collection_for_select(@job_categories, :id, :name, 7), {} ,{ :class => "form-control" } %>
        <span class="help-block text-right text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :location, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :location, autofocus: true, :class => "form-control", :placeholder => " enter your company location " %>
        <span class="help-block text-right text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_area :description, autofocus: true, :class => "form-control", :placeholder => " please enter some description " %>
        <span class="help-block text-right text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :salary_range, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :salary_range, autofocus: true, :class => "form-control", :type => "number", :min => 500, :max => 500000, :step => 500, :placeholder => " $ 500 " %>
        <span class="help-block text-right text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :application_deadline, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.month_field :application_deadline, autofocus: true, :class => "form-control", :placeholder => " application deadline " %>
        <span class="help-block text-right text-danger"></span>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4 pull-right">
        <%= f.button :class => "btn btn-flat btn-primary pull-right"  do %>
            <i class="fa fa-check-circle"></i> Create Job
        <% end %>
      </div>
    </div>

<% end %>
